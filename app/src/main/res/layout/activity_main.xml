<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface">

    <LinearLayout
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundedstyle"
            app:backgroundTint="@color/surfaceContainerHigh"
            android:elevation="8dp"
            android:text="@string/main_activity_filters_button"
            android:textColor="@color/primary"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/buttonCube"
            android:background="@drawable/roundedstyle"
            app:backgroundTint="@color/surfaceContainerHigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:elevation="8dp"
            android:text="@string/main_activity_cube_button"
            android:textColor="@color/primary"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <Button
            android:id="@+id/buttonSplines"
            android:background="@drawable/roundedstyle"
            app:backgroundTint="@color/surfaceContainerHigh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="8dp"
            android:text="@string/main_activity_spline_button"
            android:textColor="@color/primary"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>